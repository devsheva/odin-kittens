<h1>Kitten <%= @kitten.id %></h1>

<%= render "flash_message" %>

<div>
  <p>Name: <%= @kitten.name %></p>
  <p>Age: <%= @kitten.age %></p>
  <p>Cuteness: <%= @kitten.cuteness %></p>
  <p>Softness: <%= @kitten.softness %></p>

  <%= link_to "Edit kitten", edit_kitten_path(@kitten) %>
  <%= button_to "Delete kitten", @kitten, method: :delete %>
</div>